{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "jest/globals": true
  },
  "extends": [
    "standard",
    "plugin:react/recommended",
    "plugin:jest/recommended"
  ],
  "plugins": [
    "standard",
    "import",
    "promise",
    "react",
    "jest"
  ],
  "globals": {
    "window": true,
    "document": true,
    "debug": true,
    "ga": true,
    "cordova": true,
    "StatusBar": true
  },
  "rules": {
    "semi": [
      2,
      "always"
    ],
    "jsx-quotes": [
      2,
      "prefer-single"
    ]
  }
}
